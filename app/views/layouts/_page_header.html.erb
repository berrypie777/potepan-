<section class="lightSection clearfix pageHeader">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="page-title">
          <h2><%= name %></h2>
        </div>
      </div>
      <div class="col-xs-6">
        <ol class="breadcrumb pull-right">
          <li>
            <%= link_to "HOME", potepan_index_url %>
          </li>
          <% if current_page?(potepan_category_path) %>
            <li>
              <%= link_to "SHOP", potepan_index_url %>
            </li>
          <% end %>  
          <li class="active"><%= name %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
