<% taxonomies.each do |taxonomy| %>
<li>
  <%= link_to("javascript:;", data: { toggle: "collapse", target: "#taxonomy-#{taxonomy.id}" }) do %>
    <%= taxonomy.name %><i class="fa fa-plus"></i>
  <% end %>
  <ul id="taxonomy-<%= taxonomy.id %>" class="collapse collapseItem">
  <% taxonomy.root.leaves.each do |taxon| %>
    <li>
      <%= link_to potepan_category_path (taxon.id) do %>
        <i class="fa fa-caret-right" aria-hidden="true"></i><%= taxon.name %>
        <span>(<%= taxon.products.count %>)</span>
      <% end %>
    </li>
  <% end %>
  </ul>
</li>
<% end %>
